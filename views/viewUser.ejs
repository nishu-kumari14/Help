<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./components/headTag') -%>
</head>
<body>
    <%- include('./components/navbar') -%>

    <!-- Back to all users -->
    <div class="container mt-2">
        <a href="/" class="btn btn-secondary fw-bold">&larr; Back</a>
    </div>
      
    <div class="container mt-5">
        <div class="container mt-5 bg-primary text-center text-light fw-30 p-2">
            <h3>View All Customer And Product Details</h3>
        </div>

        <table class="table mt-2">
            <thead class="bg-primary text-light">
                <tr>
                    <th scope="col"><h5>Product Name</h5></th>
                    <th scope="col"><h5>Email</h5></th>
                    <th scope="col"><h5>Contact</h5></th>
                    <th scope="col"><h5>Product Price</h5></th>
                    <th scope="col"><h5>Action</h5></th>
                    <th scope="col"><h5>Delete User Information</h5></th>
                </tr>
            </thead>
            <tbody>
                <% if(data.length > 0) { %>
                    <% data.forEach((e) => { %>
                        <tr>
                            <td><%= e.name %></td>
                            <td><%= e.email %></td>
                            <td><%= e.contact %></td>
                            <td><%= e.amount %></td>
                            <td>
                                <a href="/view/<%= e._id %>" class="btn btn-primary"><h5>View & Transfer</h5></a>
                            </td>
                            <td>
                                <a href="/delete/<%= e._id %>" class="btn btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>        
                <% } else { %>
                    <tr class="bg-warning text-light">
                        <td colspan="6">No records Found!</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <%- include('./components/bootstrapScript') -%>
</body>
</html>
